{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "target": "ES6",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": ["node_modules/@types", "./src/types"]
  },
  "include": ["./*.js", "src/**/*.ts", "tests/**/*.ts", "src/**/**/*.ts"],
  "ts-node": {
    "files": true,
    "compilerOptions": {
      "outDir": "dist",
      "sourceMap": true,
      "target": "ES6",
      "module": "commonjs",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "noImplicitAny": true,
      "strict": true,
      "skipLibCheck": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "typeRoots": ["node_modules/@types", "./src/types"]
    },
    "include": ["./*.js", "src/**/*.ts", "tests/**/*.ts", "src/**/**/*.ts"]
  }
}
